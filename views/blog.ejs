<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/navbar') %>
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" width="700px">
        <pre><%= blog.body %></pre>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profilepicture %>" width="50px"> <%=blog.createdBy.fullname  %>
    </div>

    <div class="container mt-4">
        <% if (locals.user) { %>
            <h1>Comments (<%= comments.length %>)</h1>
            <form action="/blog/comment/<%= blog.id %>" method="post">
                <div class="mb-3">
                  <input type="text" class="form-control" id="content" placeholder="Enter your comment" aria-describedby="fullname" name="content">
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form>
            
            
        <% } %>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <img src="<%= comment.createdBy.profilepicture %>" width="50px"> <%=comment.createdBy.fullname  %>
                <pre><%= comment.content %></pre>
            <% }) %>
        </div>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>
